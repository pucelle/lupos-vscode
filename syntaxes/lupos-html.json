{
	"name": "Lupos HTML Template",
	"scopeName": "inline.lupos.html",
	"comment": "Reference to https://github.com/microsoft/vscode/blob/main/extensions/html/syntaxes/html.tmLanguage.json",
	"injectionSelector": "L:source.ts",
	"patterns": [
		{
			"name": "inline.lupos.html",
			"contentName": "meta.embedded.block.html",
			"begin": "(?x)(\\b(?:\\w+\\.)*html\\s*)(`)",
			"beginCaptures": {
				"1": {
					"name": "entity.name.function.tagged-template.ts"
				},
				"2": {
					"name": "string.template.ts"
				},
				"3": {
					"name": "punctuation.definition.string.template.begin.ts"
				}
			},
			"end": "`",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.template.end.ts"
				}
			},
			"patterns": [
				{
					"include": "source.ts#template-substitution-element"
				},


				{
					"name": "meta.tag.lupos.$2.start",
					"begin": "(<)([A-Z]\\w*)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.definition.tag.begin.html"
						},
						"2": {
							"name": "entity.name.type.class"
						}
					},
					"end": "/?>",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.tag.end.html"
						}
					},
					"patterns": [
						{
							"include": "text.html.basic#attribute"
						}
					]
				},
				{
					"name": "meta.tag.lupos.$2.end",
					"begin": "(</)([A-Z]\\w*)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.definition.tag.begin.html"
						},
						"2": {
							"name": "entity.name.type.class"
						}
					},
					"end": ">",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.tag.end.html"
						}
					},
					"patterns": [
						{
							"include": "text.html.basic#attribute"
						}
					]
				},


				{
					"name": "meta.tag.lupos.control.start",
					"begin": "(<)(lu:(\\w*))",
					"beginCaptures": {
						"1": {
							"name": "punctuation.definition.tag.begin.html"
						},
						"2": {
							"name": "keyword.control.$3.lupos"
						}
					},
					"end": "/?>",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.tag.end.html"
						}
					},
					"patterns": [
						{
							"include": "text.html.basic#attribute"
						}
					]
				},
				{
					"name": "meta.tag.lupos.control.end",
					"begin": "(</)(lu:(\\w*))",
					"beginCaptures": {
						"1": {
							"name": "punctuation.definition.tag.begin.html"
						},
						"2": {
							"name": "keyword.control.$3.lupos"
						}
					},
					"end": ">",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.tag.end.html"
						}
					},
					"patterns": [
						{
							"include": "text.html.basic#attribute"
						}
					]
				},


				{
					"name": "meta.tag.lupos.end",
					"begin": "(</)(?=>)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.definition.tag.begin.html"
						}
					},
					"end": ">",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.tag.end.html"
						}
					}
				},


				{
					"include": "text.html.basic"
				}
			]
		}
	]
}