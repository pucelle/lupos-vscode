{
	"name": "lupos-vscode",
	"displayName": "VScode Lupos Plugin",
	"description": "Syntax highlighting and IntelliSense for HTML & CSS Tagged Template of Lupos Framework",
	"icon": "images/logo.png",
	"version": "1.0.0",
	"publisher": "pucelle",
	"license": "MIT",
	"repository": {
		"url": "https://github.com/pucelle/lupos.vscode.git"
	},
	"bugs": {
		"url": "https://github.com/pucelle/lupos.vscode/issues"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"lupos"
	],
	"engines": {
		"vscode": "^1.51.0"
	},
	"activationEvents": [
		"onLanguage:typescript",
		"onLanguage:typescriptreact"
	],
	"main": "./out/index.js",
	"contributes": {
		"grammars": [
			{
				"injectTo": [
					"source.ts"
				],
				"scopeName": "inline.lupos.html",
				"path": "./syntaxes/lupos-html.json",
				"embeddedLanguages": {
					"meta.embedded.block.html": "html"
				}
			},
			{
				"injectTo": [
					"source.ts"
				],
				"scopeName": "inline.lupos.svg",
				"path": "./syntaxes/lupos-svg.json",
				"embeddedLanguages": {
					"meta.embedded.block.svg": "xml"
				}
			},
			{
				"injectTo": [
					"source.ts"
				],
				"scopeName": "inline.lupos.css",
				"path": "./syntaxes/lupos-css.json",
				"embeddedLanguages": {
					"meta.embedded.block.css": "scss",
					"source.css.scss": "scss"
				}
			},
			{
				"injectTo": [
					"source.ts"
				],
				"scopeName": "inline.lupos.attribute",
				"path": "./syntaxes/lupos-attribute.json",
				"embeddedLanguages": {
					"meta.template.expression.ts": "typescript"
				}
			},
			{
				"injectTo": [
					"source.ts"
				],
				"scopeName": "inline.lupos.style-value",
				"path": "./syntaxes/lupos-style-value.json",
				"embeddedLanguages": {
					"meta.template.expression.ts": "typescript"
				}
			}
		],
		"typescriptServerPlugins": [
			{
				"name": "lupos-server",
				"enableForWorkspaceTypeScriptVersions": true
			}
		]
	},
	"scripts": {
		"build": "tsc -b && cd packages/lupos-server && tsc -b",
		"watch-client": "tsc -b -w",
		"watch-server": "cd packages/lupos-server && npm run watch",
		"link": "mklink /j \"node_modules/lupos-server\" \"packages/lupos-server\"",
		"copy-to-vsce": "node copy-to-vsce.js",
		"vsce-package": "cd vsce && vsce package",
		"vsce-publish": "cd vsce && vsce publish"
	},
	"dependencies": {
		"vscode-css-languageservice": "^3.0.13",
		"vscode-html-languageservice": "^2.1.12",
		"vscode-languageserver-textdocument": "^1.0.1",
		"vscode-languageserver-types": "^3.16.0"
	},
	"devDependencies": {
		"@types/fs-extra": "^9.0.6",
		"@types/node": "^22.7.4",
		"fs-extra": "^9.0.1",
		"typescript": "^5.6.2"
	}
}
